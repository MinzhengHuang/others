<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffcc"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="第二页"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_PullDownListView"
        style="@style/btn_style"
        android:text="PullDownListView" />

    <Button
        android:id="@+id/btn_LoadingBar"
        style="@style/btn_style"
        android:text="LoadingBar" />

    <Button
        android:id="@+id/btn_WeixinGroupIcon"
        style="@style/btn_style"
        android:text="WeixinGroupIcon" />

    <Button
        android:id="@+id/btn_ExplosionField"
        style="@style/btn_style"
        android:text="ExplosionField" />

    <Button
        android:id="@+id/btn_UnderLine"
        style="@style/btn_style"
        android:text="UnderLine" />

    <Button
        android:id="@+id/btn_PasswordEditText"
        style="@style/btn_style"
        android:text="PasswordEditText" />
</LinearLayout>
